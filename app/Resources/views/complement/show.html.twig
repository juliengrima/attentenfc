{% extends 'base.html.twig' %}

{% block body %}
    <h1>Complement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ complement.id }}</td>
            </tr>
            <tr>
                <th>Civility</th>
                <td>{{ complement.civility }}</td>
            </tr>
            <tr>
                <th>Birthname</th>
                <td>{{ complement.birthname }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{% if complement.birthdate %}{{ complement.birthdate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Phone1</th>
                <td>{{ complement.phone1 }}</td>
            </tr>
            <tr>
                <th>Phone2</th>
                <td>{{ complement.phone2 }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('complement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('complement_edit', { 'id': complement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
