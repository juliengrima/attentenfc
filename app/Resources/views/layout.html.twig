{#                            <span>thème sombre</span>#}
{#                        </a>#}
{#                    </div>#}
{#                </div>#}
            </div>
        {#NAVLINK#}
            <ul class="collapsible">
                {% if is_granted("ROLE_USER") or is_granted("ROLE_ADMIN") or is_granted("ROLE_SUPER_ADMIN")%}
                <li>
                    <div class="collapsible-header">Mon compte</div>
                    <div class="collapsible-body"><a class="collapsible-align" href="#">Gérer mon profile</a></div>
                    <div class="collapsible-body"><a class="collapsible-align" href="#">Gérer mes rendez-vous</a></div>
{#                    <div class="collapsible-body"><a class="collapsible-align" href="#">Link 1.3</a></div>#}
                </li>
                    {% elseif is_granted("ROLE_ADMIN") or is_granted("ROLE_SUPER_ADMIN") %}
                <li>
                    <div class="collapsible-header">Mon profil professionnel</div>
                    <div class="collapsible-body"><a class="collapsible-align" href="#">Mon profil</a></div>
                    <div class="collapsible-body"><a class="collapsible-align" href="#">Mes rendez-vous</a></div>
                </li>
                {% else %}
                {% endif %}
            </ul>
        </ul>
    <a href="#" data-target="slide-out" class="sidenav-trigger"><i class="material-icons">menu</i></a>
    {#WRAPPER ON BOBY WITH MARGIN#}
