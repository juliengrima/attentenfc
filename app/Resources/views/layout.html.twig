{% extends 'base.html.twig' %}

{% block header %}
{#SIDENAV#}
        <ul id="slide-out" class="sidenav sidenav-fixed">
            <h3 class="container">
                <h3>
                    <a href="{{ path('homepage') }}" class="brand-logo center">Logo du site</a>
                </h3>
                </div>
    {#USERVIEW#}
            <div class="user-view">
                <div class="background-userview center">
{#                    <img src="{{ asset('') }}">#}
                    <img src="https://media.giphy.com/media/tz6S94VbrauGs/giphy.gif" class="img-userview">
                </div>
                <div class="center">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <p>{{ app.user.email }}</p>
                {% else %}
                    <p>non connecté</p>
                {% endif %}
                </div>
{#                <div class="hide-on-med-and-down">#}
{#                    <div class="center">#}
{#                        <a id="darkTrigger" class="waves-effect waves-light btn">#}
{#                            <span>thème sombre</span>#}
{#                        </a>#}
{#                    </div>#}
{#                </div>#}
            </div>
        {#NAVLINK#}
            <ul class="collapsible">
                {% if is_granted("ROLE_USER") or is_granted("ROLE_ADMIN") or is_granted("ROLE_SUPER_ADMIN")%}
                <li>
                    <div class="collapsible-header">Mon compte</div>
                    <div class="collapsible-body"><a class="collapsible-align" href="{{ path('fos_user_profile_edit', { 'id': app.user.id }) }}">Gérer mon profile</a></div>
                    <div class="collapsible-body"><a class="collapsible-align" href="#">Gérer mes rendez-vous</a></div>
                    <div class="collapsible-body"><a href="{{ path('fos_user_security_logout') }}" class="collapsible-align">
                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                        </a></div>
{#                    <div class="collapsible-body"><a class="collapsible-align" href="#">Link 1.3</a></div>#}
                </li>
                    {% elseif is_granted("ROLE_ADMIN") or is_granted("ROLE_SUPER_ADMIN") %}
                <li>
                    <div class="collapsible-header">Mon profil professionnel</div>
                    <div class="collapsible-body"><a class="collapsible-align" href="#">Mon profil</a></div>
                    <div class="collapsible-body"><a class="collapsible-align" href="#">Mes rendez-vous</a></div>
                </li>
                {% else %}
                {% endif %}
            </ul>
        </ul>
    <a href="#" data-target="slide-out" class="sidenav-trigger"><i class="material-icons">menu</i></a>
    {#WRAPPER ON BOBY WITH MARGIN#}
    <div class="wrapper">
{% endblock %}
{% block footer %}
        <input type="button" value="Show scrollWidth"
               onclick="alert(document.getElementById('body').scrollWidth);">
        </div>
{% endblock %}