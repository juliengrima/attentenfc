{% extends 'base.html.twig' %}

{% block header %}
{#SIDENAV#}
        <ul id="slide-out" class="sidenav sidenav-fixed">
    {#USERVIEW#}
            <div class="user-view">
                <div class="background">
                    <img src="{{ asset('') }}">
                </div>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <p>{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</p>
                    <a href="{{ path('fos_user_security_logout') }}" class="favorite styled">
                        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                    </a>
                {% else %}
                    <p>non connecté</p>
                {% endif %}
                <div class="hide-on-med-and-down">
                    <div class="center">
                        <a id="darkTrigger" class="waves-effect waves-light btn">
                            <span>thème sombre</span>
                        </a>
                    </div>
                </div>
            </div>
        {#NAVLINK#}
            <ul class="collapsible">
                {% if is_granted("ROLE_USER") or is_granted("ROLE_ADMIN") or is_granted("ROLE_SUPER_ADMIN")%}
                <li>
                    <div class="collapsible-header">First</div>
                    <div class="collapsible-body"><a class="collapsible-align" href="#">Link 1.1</a></div>
                    <div class="collapsible-body"><a class="collapsible-align" href="#">Link 1.2</a></div>
                    <div class="collapsible-body"><a class="collapsible-align" href="#">Link 1.3</a></div>
                </li>
                <li>
                    <div class="collapsible-header">Second</div>
                    <div class="collapsible-body"><a class="collapsible-align" href="#">Link 2.1</a></div>
                    <div class="collapsible-body"><a class="collapsible-align" href="#">Link 2.2</a></div>
                </li>
                <li>
                    <div class="collapsible-header">Third</div>
                    <div class="collapsible-body"><a class="collapsible-align" href="#">Link 3.1</a></div>
                    <div class="collapsible-body"><a class="collapsible-align" href="#">Link 3.2</a></div>
                </li>
                {% else %}
                {% endif %}
            </ul>
        </ul>
    <a href="#" data-target="slide-out" class="sidenav-trigger"><i class="material-icons">menu</i></a>
    {#WRAPPER ON BOBY WITH MARGIN#}
    <div class="wrapper">
        {#TITLE#}
        <div class="row center">
            <div class="col s12 m12 l12">
                <h2>TITLE</h2>
            </div>
        </div>
{% endblock %}
{% block footer %}
        </div>
{% endblock %}