{% extends 'layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col s12 m6 l6">
            <div class="center">
                <h5>Mon profil</h5>
            </div>
            <div class="box img-circle bg-change">
                <div class="container table-top-marge">
                    <table class="striped">
                        {% if profile is defined %}
                        <tr>
                            <td>Nom :</td>
                            <td>{{ profile.birthname }}</td>
                        </tr>
                        <tr>
                            <td>Prénom :</td>
                            <td>{{ profile.name }}</td>
                        </tr>
                        <tr>
                            <td>Adresse :</td>
                            <td>{{ profile.address }}</td>
                        </tr>
                        <tr>
                            <td>Code postal :</td>
                            <td>{{ profile.zipcode }}</td>
                        </tr>
                        <tr>
                            <td>Ville :</td>
                            <td>{{ profile.city }}</td>
                        </tr>
                        <tr>
                            <td>Tèl fix :</td>
                            <td>{{ profile.phone1 }}</td>
                        </tr>
                        <tr>
                            <td>Mobile :</td>
                            <td>{{ profile.phone2 }}</td>
                        </tr>
                        {% else %}
                            <tr>
                                <div class="valign-wrapper">
                                    <a class="waves-effect waves-light btn " href="{{ path('complement_new') }}">Ajouter un profile</a>
                                </div>
                            </tr>
                        {% endif %}
                    </table>
                </div>
            </div>
        </div>
        <div class="col s12 m6 l6">
            <div class="center">
                <h5>Mes rendez-vous</h5>
            </div>
            <div class="box-invert box bg-change">
                <div class="container table-top-marge">
                    <table class="striped">
                        <tr>
                            <td></td>
                            <td></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
<style>

</style>
{% endblock %}
